<div class="row mt-5 justify-content-center">
  <div class="col-8">
    <form method="POST" action="[/new] or [/edit/1]">
      <div class="form-group row">
        <div class="col-2"><span>*必填欄位</span></div>
        <div class="col-10 text-center"><span>[note]</span></div>
      </div>
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">名稱*：</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" name="name" value="[name]">
        </div>
      </div>
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">日期*：</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" id="date" name="date" value="[date]">
        </div>
      </div>
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">類別*：</label>
        <div class="col-sm-10">
          <select class="form-control" id="category" name="category">
            <option>類別</option>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label for="amount" class="col-sm-2 col-form-label">金額*：</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="amount" name="amount" value="[amount]">
        </div>
      </div>
      <div class="form-group row">
        <label for="merchant" class="col-sm-2 col-form-label">商家：</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="merchant" name="merchant" value="[merchant]">
        </div>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-danger">[編輯/新增]</button>
        <a href="/"><button type="button" class="btn btn-danger">取消</button></a>
      </div>
    </form>
  </div>
</div>