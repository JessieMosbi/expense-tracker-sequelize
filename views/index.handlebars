{{!-- 類別 --}}
<div class="row mt-5">
  <div class="col-3"></div>
  <div class="col-4">
    <form action="/" class="form-inline d-flex justify-content-around">
      <select class="form-control" id="month" name="month" onchange="this.form.submit()">
        {{#each months}}
          <option value="{{this.id}}" {{#selectIfEqual this.id ../selMonth}}{{/selectIfEqual}}>
            {{this.name}}</option>
        {{/each}}
      </select>
      <select class="form-control" id="category" name="category" onchange="this.form.submit()">
        {{#each categories}}
          <option value="{{this.id}}" {{#selectIfEqual this.id ../selCategory}}{{/selectIfEqual}}>
            {{this.name}}</option>
        {{/each}}
      </select>
    </form>
  </div>

</div>

</div>
{{!-- 總金額 --}}
<div class="row mt-5">
  <div class="col-3"></div>
  <div class="col-4">
    <h4>總金額</h4>
    <h1 class="text-right"><span id="total-amount">{{totalAmount}}</span></h1>
  </div>
</div>
{{!-- List 區塊 --}}
<div class="row mt-5">
  <div class="col-3"></div>
  <div class="col-9">
    <div class="row justify-content-between">
      {{#each records}}
        {{!-- 明細 --}}
        <div class="col-6">
          <div class="list-group">
            <a href="javascript:;" class="list-group-item list-group-item-action">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  {{{this.icon}}}
                  <div class="d-flex flex-column ml-2">
                    <span>{{this.name}}</span>
                    <span>{{this.date}}</span>
                  </div>
                </div>
                <span>{{this.merchant}}</span>
                <span>{{this.amount}}</span>
              </div>
            </a>
          </div>
        </div>
        {{!-- 按鈕 --}}
        <div class="col-6 d-flex align-items-center">
          <form action="/records/edit/{{this.id}}">
            <button type="submit" class="btn btn-info mr-2">修改</button>
          </form>
          <form action="/records/{{this.id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-warning">刪除</button>
          </form>
        </div>
      {{/each}}
    </div>
  </div>
  {{!-- 按鈕 --}}
</div>
{{!-- button 區塊 --}}
<div class="row mt-5">
  <div class="col-3"></div>
  <div class="col-4 text-center">
    <form action="/records/new">
      <button type="submit" class="btn btn-danger">新增支出</button>
    </form>
  </div>
</div>